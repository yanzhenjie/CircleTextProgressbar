<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="跳过" />

            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="跳过" />


            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_five_narrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="窄进度条" />

            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_red_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="红色进度" />

            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_red_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="红色边框" />

            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_red_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="红色圆" />

            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_red_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="跳过" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_five_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="我是五个字" />

            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_five_wide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="宽进度条" />

            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_red_circle_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="圆心点击变色"
                app:in_circle_color="@color/state_color" />

            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_red_progress_text1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="0%"
                app:in_circle_color="@color/state_color" />

            <com.yanzhenjie.countdownprogress.CircleTextProgressbar
                android:id="@+id/tv_red_progress_text2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="100%"
                app:in_circle_color="@color/state_color" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>